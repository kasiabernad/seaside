.border-form
  %h1 Listing hotels
  %table
    %thead
      %tr
        %th Name
        %th Description
        %th Address
        / %th Latitude
        / %th Longitude
        %th Website
        %th Phone
        %th Promoted
        %th City
        %th{:colspan => "3"}
    %tbody
      - @hotels.each do |hotel|
        %tr
          %td= hotel.name
          %td= hotel.description.first(200) + '...'
          %td= hotel.address
          / %td= hotel.latitude.round(4)
          / %td= hotel.longitude.round(4)
          %td= hotel.website
          %td= hotel.phone
          %td= hotel.promoted
          - if hotel.city.present?
            %td= link_to "#{hotel.city.try(:name)}", city_path(hotel.city_id)
          %td= link_to 'Show', hotel
          %td= link_to 'Edit', edit_hotel_path(hotel)
          %td= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' }

  