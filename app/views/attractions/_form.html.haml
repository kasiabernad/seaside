= form_for(@attraction) do |f|
  - if @attraction.errors.any?
    #error_explanation
      %h2
        = pluralize(@attraction.errors.count, "error")
        prohibited this attraction from being saved:
      %ul
        - @attraction.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :latitude
    %br/
    = f.text_field :latitude
  .field
    = f.label :longitude
    %br/
    = f.text_field :longitude
  .field
    = f.label :website
    %br/
    = f.text_field :website
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :promoted
    %br/
    = f.check_box :promoted
  = f.hidden_field :city_id, :value => params[:city_id]
  .actions
    = f.submit
