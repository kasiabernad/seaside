= image_tag @attraction_photo.picture
= form_for @attraction_photo do |f|
  - if @attraction_photo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attraction_photo.errors.count, "error")} prohibited this attraction_photo from being saved:"
      %ul
        - @attraction_photo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :picture
    = f.file_field :picture
    = f.hidden_field :attraction_id, :value => params[:attraction_id]
  .actions
    = f.submit 'Save'
