= image_tag @hotel_photo.picture
= form_for @hotel_photo do |f|
  - if @hotel_photo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hotel_photo.errors.count, "error")} prohibited this hotel_photo from being saved:"
      %ul
        - @hotel_photo.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :picture
    = f.file_field :picture
    = f.hidden_field :hotel_id, :value => params[:hotel_id]
  .actions
    = f.submit 'Save'
