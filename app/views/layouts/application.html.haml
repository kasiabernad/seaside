!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Seaside
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    %link{:href => "//railsgirls.com/assets/bootstrap.css", :rel => "stylesheet"}/
    %link{:href => "//railsgirls.com/assets/bootstrap-theme.css", :rel => "stylesheet"}/
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      = yield
      %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => '/welcome/index'} SeaSide app
          .collapse.navbar-collapse
            %ul.nav.navbar-nav
              -if signed_in?
                %li.active{:style => "margin-top:15px; margin-right:5px"}
                  = "Signed in as " + current_user.email
                %li.active
                  %a{:href => "/cities"} Cities
                %li.active
                  %a{:href => "/hotels"} Hotels
                %li.active
                  %a{:href => "/attractions"} Attractions
                %li.active
                  = link_to('Log out', destroy_user_session_path, :method => :delete)
              -else
                %li.active
                  = link_to('Sing in', new_user_session_path)
                %li.active
                  = link_to('Sing up', new_user_registration_path)
                %li.active
                  %a{:href => "/cities"} Cities
                %li.active
                  %a{:href => "/hotels"} Hotels
                %li.active
                  %a{:href => "/attractions"} Attractions
              
    %footer
      .container
        %center
          2015
